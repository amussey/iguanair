
top_srcdir = @top_srcdir@
srcdir = @srcdir@
top_builddir = @top_builddir@
builddir = @builddir@

SED = @SED@

PYTHON_SCRIPTS = mode2-translator send-loop serial-test

all: $(PYTHON_SCRIPTS)
install: all

clean:
	$(RM) $(PYTHON_SCRIPTS)
distclean:
	$(RM) Makefile

%: $(srcdir)/%.in
	$(SED) 's,@''PYTHON@,@PYTHON@,' $< >$@ && chmod +x $@

Makefile: ../config.status $(srcdir)/Makefile.in
	cd .. && $(SHELL) ./config.status

